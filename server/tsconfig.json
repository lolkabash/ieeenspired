{
    "compilerOptions": {
        "module": "CommonJS",
        "noImplicitAny": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "./build",
        "sourceMap": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}